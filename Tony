<script>
const phone="447749688826";
const email="Antonytucktruck@gmail.com";

function buildMsg(){
  const n=name.value.trim();
  const p=phone.value.trim();
  const d=dest.value.trim();
  const o=order.value.trim();
  if(!n||!p||!d||!o){alert("Please fill all fields");return null;}
  return `Tony’s Tuck Truck Order
Name: ${n}
Phone: ${p}
Destination: ${d}
Order: ${o}`;
}
function sendWhatsApp(){
  const m=buildMsg(); if(!m)return;
  location.href=`https://wa.me/${phone}?text=`+encodeURIComponent(m);
}
function sendEmail(){
  const m=buildMsg(); if(!m)return;
  location.href=`mailto:${email}?subject=Order Request&body=`+encodeURIComponent(m);
}
</script>

